<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/common_left_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的账户"
            android:textColor="#121212"
            android:textSize="18dp" />
    </LinearLayout>

    <include layout="@layout/style_null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133.3dp"
        android:orientation="horizontal">

        <com.predictF.predictFuture.util.XCRoundImageView
            android:id="@+id/my_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26.7dp"
            android:src="@mipmap/account_clerkhead_default"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="53.3dp"
            android:orientation="vertical"
            android:text="浅浅"
            android:textColor="#323232"
            android:textSize="21.3dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include layout="@layout/mine_right" />
    </LinearLayout>

    <include layout="@layout/null2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:orientation="horizontal">

        <TextView
            style="@style/mycount_text"
            android:text="昵称：" />

        <EditText
            android:id="@+id/mycount_name"
            style="@style/mycount_edit"
            android:hint="填写账户名或昵称" />

    </LinearLayout>

    <include layout="@layout/style_null" />
    手机号码

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:orientation="horizontal">

        <TextView
            style="@style/mycount_text"
            android:text="手机号码：" />

        <EditText
            android:id="@+id/mycount_phone"
            style="@style/mycount_edit"
            android:hint="填写账户名或昵称" />

    </LinearLayout>

    <include layout="@layout/style_null" />
    微信登录

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:orientation="horizontal">

        <TextView
            style="@style/mycount_text"
            android:text="微信登录：" />

        <Button
            android:id="@+id/mycount_bind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="去绑定"
            android:textColor="#ffd300"

            android:textSize="16dp" />

        <include layout="@layout/mine_right" />

    </LinearLayout>

    <include layout="@layout/style_null" />


</LinearLayout>