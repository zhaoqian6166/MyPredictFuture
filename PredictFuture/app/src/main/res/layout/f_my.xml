<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x33"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/common_left_arrow"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x33"
            android:gravity="center"
            android:text="我的"
            android:textColor="#121212"
            android:textSize="25dp" />
    </LinearLayout>
    <include layout="@layout/style_null"/>
    <LinearLayout
        android:id="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y170"
        android:orientation="horizontal"
        >
    <com.predictF.predictFuture.util.XCRoundImageView
        android:layout_width="@dimen/x133"
        android:layout_height="@dimen/y120"
        android:id="@+id/my_img"
        android:src="@mipmap/account_clerkhead_default"
       android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x33"

        />
        <LinearLayout
          android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x33"


            >
            <TextView
                android:id="@+id/mine_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#323232"
                android:text="浅浅"
                android:textSize="21.3dp"


                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通会员"
                android:textColor="#bfbfbf"
                android:textSize="14.7dp"
                android:layout_marginTop="@dimen/y20"

                />

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <include layout="@layout/mine_right" />
    </LinearLayout>

    <include layout="@layout/null2" />
    我的下载
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_download"
            style="@style/mine_img" />
        <TextView
            android:text="我的下载"
            style="@style/mine_text"
            android:layout_marginLeft="@dimen/x50"
            />

        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/style_null"/>
我的收藏
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_collection"
            style="@style/mine_img" />
        <TextView
            android:text="我的收藏"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/style_null"/>
    账户余额
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_account"
            style="@style/mine_img" />
        <TextView
            android:text="账户余额"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/style_null"/>
购买记录
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_purchase"
            style="@style/mine_img" />
        <TextView
            android:text="购买记录"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/style_null"/>
    消息中心
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_news"
            style="@style/mine_img" />
        <TextView
            android:text="消息中心"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/null2"/>
    VIP
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_vip"
            style="@style/mine_img" />
        <TextView
            android:text="VIP专享"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/null2"/>
    设置
    <LinearLayout
        style="@style/mine_linear"
        >
        <ImageView
            android:src="@mipmap/mine_install"
            style="@style/mine_img" />
        <TextView
            android:text="设置"
            style="@style/mine_text" />
        <include layout="@layout/mine_right" />

    </LinearLayout>
    <include layout="@layout/style_null"/>
    客服电话
    <LinearLayout style="@style/mine_linear">
        <ImageView
            android:src="@mipmap/mine_phone"
            style="@style/mine_img" />
        <TextView
            android:text="客服电话"
            style="@style/mine_text" />
      <TextView
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0571-86131815"
          android:textColor="#bfbfbf"
          android:textSize="14.7dp"
          android:layout_marginRight="@dimen/x33"
          />

    </LinearLayout>


</LinearLayout>