<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regin_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x33"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/common_left_arrow"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x33"
            android:gravity="center"
            android:text="注册"
            android:textColor="#121212"
            android:textSize="25sp" />
    </LinearLayout>
    <include layout="@layout/style_null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y220"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/regin_img"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y180"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:src="@mipmap/logo" />
    </LinearLayout>
输入手机号码
    <LinearLayout
        style="@style/login_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="手机号码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/regin_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x33"
            android:layout_weight="1"
            android:hint="+86"
            android:layout_marginBottom="@dimen/y20"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />

    </LinearLayout>
获得验证码
    <LinearLayout
        style="@style/login_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="验证码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/regin_Editcheck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x77"
            android:hint="请输入验证码"
            android:textColor="#cacaca"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/y20"

            />
        <TextView
            android:id="@+id/regin_getCheckNum"
            android:text="获取验证码"
            android:textColor="#121212"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/y20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    输入密码
    <LinearLayout
        style="@style/login_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="密码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/regin_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:layout_weight="1"
            android:hint="密码不少于6个字"
            android:layout_marginBottom="@dimen/y20"
            android:padding="@dimen/x7"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />
        显示密码否
        <ImageView
            android:id="@+id/regin_noShowPwd"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y40"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/y20"
            android:src="@drawable/regin_pwd_show"
            />

    </LinearLayout>
    注册按钮?????????????????????????????
    <Button
        android:layout_marginTop="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x37"
        android:layout_marginRight="@dimen/x37"
        android:layout_height="@dimen/y90"
        android:id="@+id/regin_regin"
        android:background="@drawable/regin_regin"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

<LinearLayout

    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <!--android:layout_width="@dimen/x44"
    android:layout_height="@dimen/y40"-->
    <CheckBox
        android:id="@+id/regin_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/regin_agree"
        android:layout_marginBottom="@dimen/y10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        android:textColor="#898989"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x11"
        android:textSize="12sp"
        />
    
</LinearLayout>




</LinearLayout>