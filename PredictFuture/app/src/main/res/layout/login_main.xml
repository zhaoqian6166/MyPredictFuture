<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/common_left_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textColor="#121212"
            android:textSize="18dp" />
    </LinearLayout>

    <include layout="@layout/style_null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146.7dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@mipmap/logo" />
    </LinearLayout>
    输入手机号码

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.3dp"
            android:text="手机号码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="+86"
            android:paddingBottom="13.3dp"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />

    </LinearLayout>

    输入密码

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.3dp"
            android:text="密码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/regin_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:hint="密码不少于6个字"
            android:inputType="textPassword"
            android:paddingLeft="4dp"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />
        显示密码否

        <ImageView
            android:id="@+id/regin_noShowPwd"
            android:layout_width="26.7dp"
            android:layout_height="26.7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13.3dp"
            android:src="@drawable/regin_pwd_show" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="33.3dp"
        android:text="忘记密码"
        style="@style/text_gray" />
    注册按钮

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:layout_marginTop="30.3dp"
        android:background="@mipmap/login_entry" />
    快速注册

    <Button
        android:id="@+id/login_regin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:layout_marginTop="13.3dp"
        android:background="@mipmap/login_register" />

    <!-- <ImageView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1" />-->

     <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="80dp"
    android:text="用社交账号登录"
    android:textColor="#b3b3b3"
    android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46.7dp"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_weChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_wechat"
            android:paddingTop="6.7dp"
            android:text="微信登录"
            android:textColor="#b3b3b3"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_QQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_qq"
            android:paddingTop="6.7dp"
            android:text="QQ登录"
            android:gravity="center"
            android:textColor="#b3b3b3"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>