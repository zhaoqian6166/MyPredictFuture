<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x33"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/common_left_arrow"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x33"
            android:gravity="center"
            android:text="登录"
            android:textColor="#121212"
            android:textSize="25dp" />
    </LinearLayout>
    <include layout="@layout/style_null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y220"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y180"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:src="@mipmap/logo" />
    </LinearLayout>
    输入手机号码

    <LinearLayout style="@style/login_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="手机号码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x33"
            android:layout_weight="1"
            android:hint="+86"
            android:layout_marginBottom="@dimen/y20"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />

    </LinearLayout>

    输入密码

    <LinearLayout

        style="@style/login_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="密码"
            android:textColor="#121212"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:layout_weight="1"
            android:hint="密码不少于6个字"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/y20"
            android:padding="@dimen/x7"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />
        显示密码否

        <ImageView
            android:id="@+id/regin_noShowPwd"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y40"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/y20"
            android:src="@drawable/regin_pwd_show" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x56"
        android:text="忘记密码"
        style="@style/text_gray" />
    注册按钮

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="@dimen/x37"
        android:layout_marginRight="@dimen/x37"
        android:layout_marginTop="@dimen/y30"
        android:background="@mipmap/login_entry" />
    快速注册

    <Button
        android:id="@+id/login_regin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="@dimen/x37"
        android:layout_marginRight="@dimen/x37"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:background="@mipmap/login_register" />

    <!-- <ImageView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1" />-->

     <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/y200"
    android:text="用社交账号登录"
    android:textColor="#b3b3b3"
    android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:layout_marginBottom="@dimen/y20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_weChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_wechat"

            android:text="微信登录"
            android:paddingTop="@dimen/y20"
            android:textColor="#b3b3b3"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_QQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_qq"
            android:text="QQ登录"
            android:paddingTop="@dimen/y20"
            android:gravity="center"
            android:textColor="#b3b3b3"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>