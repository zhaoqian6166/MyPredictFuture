<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_gray">
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x33</item>
        <item name="android:textColor">#323232</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:textSize">21.3sp</item>
    </style>

    <style name="title2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/x33</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_right">
        <item name="android:layout_marginRight">@dimen/x33</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mine_img">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/x55</item>
        <item name="android:layout_height">@dimen/y49</item>
        <item name="android:layout_marginLeft">@dimen/x33</item>
    </style>

    <style name="mine_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/x50</item>
    </style>

    <style name="mycount_text">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="mycount_edit">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">73.3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mine_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y110</item>
        <item name="android:layout_marginLeft">@dimen/x56</item>
        <item name="android:layout_marginRight">@dimen/x56</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="detail_rb">
        <item name="android:layout_width">@dimen/x67</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/x100</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/y10</item>
        <item name="android:layout_marginTop">@dimen/y10</item>

        <item name="android:textColor">@drawable/text_selector</item>
        <item name="android:textSize">13.3sp</item>
    </style>

    <style name="pay_left">
        <item name="android:layout_marginLeft">@dimen/x33</item>
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:layout_height">@dimen/y45</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="pay_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">21.3sp</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#323232</item>
    </style>

    <style name="pay_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y110</item>
        <item name="android:orientation">horizontal</item>
    </style>



</resources>
